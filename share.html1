<!DOCTYPE html>
<html>
<head>
    <title>Share Data</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
    <div class="max-w-2xl mx-auto p-4 bg-white shadow mt-6 rounded-lg">
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-2xl font-bold">Meter</h1>
            <div class="space-x-2">
                <button class="bg-black text-white px-3 py-1 rounded">Bill History</button>
                <button class="bg-black text-white px-3 py-1 rounded">Family</button>
                <button class="bg-black text-white px-3 py-1 rounded">My Profile</button>
            </div>
        </div>

        <img src="{{ url_for('static', filename='images/report-preview.jpg') }}" alt="Report Preview" class="rounded w-full mb-4">

        <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-semibold">Share</h2>
            <div class="space-x-2">
                <button title="Copy Link" class="text-sm">ðŸ”—</button>
                <button title="Email">ðŸ“§</button>
            </div>
        </div>

        <form action="/share-data" method="POST" class="space-y-4">
            <!-- FAMILY SHARE -->
            <label class="flex items-center justify-between border-2 border-blue-500 rounded-lg p-3 bg-black text-white cursor-pointer">
                <div class="flex items-center">
                    <input type="checkbox" name="share_to" value="family" class="mr-3 w-5 h-5">
                    <div>
                        <p class="font-semibold">Family</p>
                        <p class="text-sm text-gray-300">Share to everyone in the household</p>
                    </div>
                </div>
                <div class="flex -space-x-2">
                    <img src="{{ url_for('static', filename='images/avatar1.png') }}" class="w-8 h-8 rounded-full border-2 border-white">
                    <img src="{{ url_for('static', filename='images/avatar2.png') }}" class="w-8 h-8 rounded-full border-2 border-white">
                    <img src="{{ url_for('static', filename='images/avatar3.png') }}" class="w-8 h-8 rounded-full border-2 border-white">
                </div>
            </label>

            <!-- INDIVIDUALS -->
            {% for name, avatar in users %}
            <label class="flex items-center justify-between bg-gray-200 rounded-lg p-3">
                <div class="flex items-center">
                    <input type="checkbox" name="share_to" value="{{ name }}" class="mr-3 w-5 h-5">
                    <p class="font-medium">{{ name }}</p>
                </div>
                <img src="{{ url_for('static', filename=avatar) }}" class="w-8 h-8 rounded-full">
            </label>
            {% endfor %}

            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded mt-4">Share Now</button>
        </form>
    </div>
</body>
</html>
